<h1>My Events</h1>
<% event_array = Array.new %>
<% @user_events.each do |user_event| %>
	<ul>
		<li><%= link_to "#{user_event.event.start_date} - #{user_event.event.event_name}", user_user_event_path(current_user, user_event) %></li>
	</ul>
	<% event_array << user_event.event_id %>
<% end %>

<h1>Other Events</h1>

<% @events.each do |event| %>
	<ul>
		<% if event_array.include?(event.id) %>
		<% else %>
			<li><%= link_to "#{event.start_date} - #{event.event_name}", event_path(event.id) %> - <%= link_to "Join event", new_user_user_event_path(current_user.id, :event_id => event.id) %></li>
		<% end %>
	</ul>
<% end %>

<br>

<%= link_to "+ Add Event", new_event_path  %>